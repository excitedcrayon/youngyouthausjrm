@import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap');

*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root{
    --color-red: #C00;
    --color-white: #FFF;
    --color-black: #000;
    --color-light-grey: #EEE;
    --color-grey: #CCC;

    --transition-fastest: 0.1s;
    --transition-fas: 0.25s;
    --transition-medium: 0.5s;
    --transition-slow: 0.75s;
    --transition-slowest: 1s;
}

html,
body{
    font-family: "Roboto", sans-serif;
    scroll-behavior: smooth;
    width: 100%;
    min-height: 100vh;
}
main{
    position: relative;
}
header .logo {
    display: flex;
    margin: 0 auto;
    width: fit-content;
    align-items: center;
    padding: 0.8rem;
}

header .logo img {
    width: 60px;
    height: 60px;
    margin: 0.25rem;
    object-fit: contain;
    object-position: center;
}

header .logo h5 {
    font-size: 1.2rem;
    font-weight: 300;
}

header + section {
    display: grid;
    place-items: flex-start;
    gap: 0.85rem;
    padding: 1rem;
    grid-template-columns: repeat(1, 1fr);
}

section .video-player{
    display: grid;
    /* place-items: center; */
}

@media (min-width: 1100px){
    header + section{
        grid-template-columns: repeat(5, 1fr);
    }

    section .video-player{
        grid-column: span 3;
    }

    section .lesson-videos{
        grid-column: span 2;
    }
} 

.video-player{
    position: sticky;
    top: 0;
    width: 100%;
    min-height: 300px;
    background: var(--color-black);
    overflow: hidden;
}
.loading-spinner {
    display: none;
    border: 5px solid;
    border-color: var(--color-red) transparent transparent;
    position: absolute;
    top: 50%;
    left: 50%;
    opacity: 0;
    transform: translate(-50%, -50%) rotate(0deg);
    width: 50px;
    height: 50px;
    border-radius: 50%;
    filter: hue-rotate(0deg);
    animation: loadingSpinner var(--transition-medium) ease infinite;
}

@keyframes loadingSpinner {
    0%{
        opacity: 0;
        transform: translate(-50%, -50%) rotate(0deg);
        filter: hue-rotate(0deg);
    }

    100%{
        opacity: 1;
        transform: translate(-50%, -50%) rotate(360deg);
        filter: hue-rotate(360deg);
    }
}

.video-player video{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
}
.lesson-videos {
    display: grid;
    row-gap: 0.35rem;
    width: fit-content;
    margin: 1.25rem auto;
}

@media only screen and (max-width: 980px) and (orientation: landscape){
    .lesson-videos {
        /* grid-template-columns: repeat(2, 1fr); */
        gap: 0.55rem;
    }
}
.lesson-videos .lesson {
    border: 2px solid var(--color-red);
    padding: 0.25rem 0.15rem;
    position: relative;
    border-radius: 0.25rem;
    margin: 0.1rem 0;
    white-space: nowrap;
    text-overflow: ellipsis;
    transition: var(--transition-fastest) ease;
}

@media (min-width: 1100px){
    .lesson-videos .lesson{
        padding-left: 3.5rem;
    }
    .lesson-videos .lesson:hover {
        cursor: pointer;
        background: var(--color-red);
        color: var(--color-white);
    }
    .lesson-videos .lesson::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 1rem;
        transform: translateY(-50%);
        width: 30px;
        height: 30px;
        background: url('../res/icons/icon-video.svg') no-repeat center;
        background-size: contain !important;
    }
    .lesson-videos .lesson:hover:before {
        background: url('../res/icons/icon-video-white.svg') no-repeat center !important;
    }
}